<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <TextView android:id="@+id_pick_sound_activity/SelectedAlarm"
    	android:layout_width="fill_parent"
    	android:layout_height="20dip"
    	android:layout_alignParentTop="true"
    	android:background="#cccccc"
    	android:textColor="#000000"
    	/>
    	
    <TabHost android:id="@android:id/tabhost"
    	android:layout_width="fill_parent"
    	android:layout_height="600px"
    	android:layout_below="@id_pick_sound_activity/SelectedAlarm"
    	>
	    <LinearLayout
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:orientation="vertical"
	    	>
	    	<TabWidget android:id="@android:id/tabs"
	    		android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		/>
	    		
	    	<FrameLayout android:id="@android:id/tabcontent"
	    		android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:padding="5px"
	    		/>
	    	
	    </LinearLayout>
    </TabHost>
    
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="70px"
    	android:layout_alignParentBottom="true"
    	android:layout_below="@android:id/tabhost"
    	android:orientation="horizontal"
    	android:padding="10px"
    	android:gravity="center"
    	>
    	<Button android:id="@+id_pick_sound_activity/OK"
    		android:layout_width="200px"
    		android:layout_height="70px"
    		android:layout_marginRight="10dip"
    		android:text="@string/common_ok"
    		/>
    		
    	<Button android:id="@+id_pick_sound_activity/Cancel"
    		android:layout_width="200px"
    		android:layout_height="70px"
    		android:layout_marginLeft="10dip"
    		android:text="@string/common_cancel"
    		/>
    </LinearLayout>
    	
</RelativeLayout>
